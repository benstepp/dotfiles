[merge]
  ff = only
[alias]
  pr = pull-request
  ch = checkout
  db = !sh -c 'git branch -D $1 && git push origin :$1' -
  df = --no-pager diff
  mu = !sh -c 'git checkout master && git fetch upstream && git merge upstream/master && git push'
